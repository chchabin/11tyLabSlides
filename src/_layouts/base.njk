<!DOCTYPE html>
<html lang="fr-FR">
<head>
    {% include "header.njk" %}
</head>
<body>
{% block content %}
    {{ content | safe }}
{% endblock %}

<script src="{{ '/reveal.js/reveal.js' | url }}"></script>
<script src="{{ '/reveal.js/plugin/markdown/markdown.js' | url }}"></script>
<script src="{{ '/reveal.js/plugin/highlight/highlight.js' | url }}"></script>
<script src="{{ '/reveal.js/plugin/notes/notes.js' | url }}"></script>
<!-- CDN externe - pas de changement nÃ©cessaire -->
<script src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js"></script>
<script>
    // Configuration simple
    mermaid.initialize({
        startOnLoad: true,
        theme: 'dark'
    });

    // Initialisation Reveal.js simple
    Reveal.initialize({
        controls: true,
        progress: true,
        center: true,
        hash: true,
        plugins: [ RevealMarkdown, RevealHighlight, RevealNotes ]
    });
</script>
</body>
</html>